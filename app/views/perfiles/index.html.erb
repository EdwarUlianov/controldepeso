<h1>PERFILES</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>
 
    <% @perfiles.each do |perfil| %>

      <tr>
        <td><%= perfil.nombre %></td>
        <td><%= link_to 'Borrar', perfil, method: :delete,
                                     data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
      
    
    <% end %>
  
  </table>