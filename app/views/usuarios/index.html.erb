<h1>USUARIOS</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>
 
    <% @usuarios.each do |usuario| %>

      <tr>
        <td><%= usuario.nombre %></td>
        <td><%= link_to 'Destroy', usuario, method: :delete,
                                     data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
      
    
    <% end %>
  
  </table>